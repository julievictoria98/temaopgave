---
import RoundButton from "../RoundButton.astro";
import "../../styles/style.css";
---

<div popover id="popup">
  <h1>Dashboard Login</h1>
  <form>
    <input type="text" placeholder="Username" />
  </form>
  <form>
    <input type="password" placeholder="Password" />
  </form>
  <RoundButton color="yellow">Get started</RoundButton>
</div>

<button class="popover_button" popovertarget="popup">Login</button>

<style>
  @layer components {
    .popover_button {
      display: inline-block;
      padding: 0.5rem 1rem;
      border: none;
      border-radius: 50px;
      font-size: calc(0.5rem + 0.5vw);
      cursor: pointer;
      background-color: var(--primary-color-1);
    }

    .popover_button:hover {
      scale: 1.1;
    }

    body:has(:popover-open) {
      filter: blur(5px) brightness(0.5);
    }

    div {
      display: flex;
      flex-direction: column;
      gap: 1rem;
      padding: 3rem;
      background-color: var(--primary-color-3);
      border-radius: 25px;
      box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.1);
      align-items: center;
      max-width: 40rem;
    }
    h1 {
      color: var(--secondary-color-2);
      font-weight: 400;
      font-size: var(--step-3);
    }

    input {
      border-radius: 25px;
      background-color: var(--secondary-color-1);
      padding: 0.3rem 1rem;
    }

    [popover] {
      opacity: 0;
      translate: 0 -200%;

      transition: 0.6s;
      transition-property: opacity, display, translate;

      &:popover-open {
        @starting-style {
          opacity: 0;
          translate: 0 -200%;
        }

        opacity: 1;
        translate: 0 0;
      }
    }
  }
</style>
