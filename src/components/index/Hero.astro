---
import RoundButton from "../RoundButton.astro";
import Box from "./Box.astro";
import "../../styles/style.css";
---

<article>
  <div class="grid">
    <section class="text_content">
      <h1>Adam Buschemia Business Consultant</h1>
      <p>
        Get help from Alex Moore, a professional business coach with advanced
        experience on growth and business scaling.
      </p>
      <div>
        <RoundButton color="white">Book a Meeting</RoundButton>
      </div>
    </section>
    <section class="img_container">
      <img src="/images/sarah.jpg" alt=" Sarah" />
    </section>
  </div>
  <section class="boxes">
    <Box
      header="Finance & Restructuring"
      url="casestudy"
      btnText="Our Services"
    />
    <Box header="Our Approach" url="about" btnText="More About" />
    <Box header="Consultalk Result" url="team" btnText="Explore Our Solution" />
  </section>
</article>

<style>
  @layer components {
    article {
      --font-color: white;

      .text_content {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        padding-left: 15rem;
        max-width: 40rem;
        padding-top: 5rem;
      }
    }

    .grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      background-color: var(--primary-color-3);
    }

    .boxes {
      display: flex;
      gap: 2rem;
      padding-inline: 15rem;
      margin-top: -10rem;
      & div {
        padding: 2rem;
        border-radius: 15px;
        gap: 1rem;
        border-radius: 20px;
        border: 1px solid rgba(255, 255, 255, 0.2);
        background: rgba(38, 38, 38, 0.9);
        backdrop-filter: blur(10px);
      }
    }

    .img_container {
      height: 35rem;
      width: 100%;
    }

    .img_container img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    @media (max-width: 1350px) {
      .boxes {
        padding-inline: 1rem;
      }

      article {
        .text_content {
          padding-left: 0rem;
          padding: 3rem;
        }
      }
    }

    @media (max-width: 800px) {
      .grid {
        grid-template-columns: 1fr;
      }

      .boxes {
        flex-direction: column;
        margin-top: 2rem;
      }

      .img_container {
        display: none;
      }

      article {
        .text_content {
          padding-left: 0rem;
          padding: 3rem;
        }
      }
    }
  }
</style>
