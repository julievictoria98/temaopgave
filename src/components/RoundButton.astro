---
const { color } = Astro.props;
---

<button class={color}>
  <slot />
</button>

<style>
  button {
    display: inline-block;
    padding: 1rem 1.5rem;
    border: none;
    border-radius: 50px;
    font-size: 1rem;
    cursor: pointer;
  }

  .red {
    background-color: var(--secondary-color-2);
  }

  .yellow {
    background-color: var(--primary-color-1);
    color: var(--primary-color-3: );
  }
</style>
