  .image_style_1::before {
    content: "";
    background-color: var(--primary-color-2);
    border-radius: 25px;

    font-size: 3rem;
    position: absolute;
    width: 10rem;
    height: 10rem;
    /* width: 40%; 
    height: 30%; */
    top: -5%;
    left: 65%;
    z-index: -1;
  }

  .image_style_1::after {
    content: "";
    background-image: url(../../images/pattern.svg);
    border-radius: 2rem;

    font-size: 3rem;
    position: absolute;
    width: 6em;
    height: 17rem;
    top: -15%;
    left: 50%;
    z-index: -2;
  }

  .image_style_2::before {
    content: "";
    background-image: url(../../images/pattern.svg);
    border-radius: 1.5rem;

    font-size: 3rem;
    position: absolute;
    width: 20.487rem;
    height: 20.487rem;
    top: 35%;
    left: -15%;
    z-index: -2;
  }
  .image_style_2::after {
    content: "";
    background-color: var(--primary-color-2);
    border-radius: 1.5rem;
    font-size: 3rem;
    position: absolute;
    width: 10rem;
    height: 10rem;
    top: 70%;
    left: -5%;
    z-index: -1;
  }

  .image_style_3::before {
    content: "";
    background-image: url(../../images/pattern.svg);
    border-radius: 1.5rem;

    font-size: 3rem;
    position: absolute;
    width: 20.487rem;
    height: 20.487rem;
    top: 35%;
    left: -15%;
    z-index: -2;
  }
  .image_style_3::after {
    content: "";
    background-color: var(--primary-color-2);
    border-radius: 1.5rem;
    font-size: 3rem;
    position: absolute;
    width: 10rem;
    height: 10rem;
    top: 70%;
    left: -5%;
    z-index: -1;
  }

  @media (max-width: 1000px) {
    .image_style_1::before {
      width: 7rem;
      height: 8rem;
      left: 75%;
    }

    .image_style_1::after {
      width: 15rem;
      height: 15rem;
      top: -15%;
      left: 45%;
    }

    .image_style_2::before {
      width: 20.487rem;
      height: 20.487rem;
    }
    .image_style_2::after {
      position: absolute;
      width: 10rem;
      height: 10rem;
    }

    .image_style_3::before {
      width: 20.487rem;
      height: 20.487rem;
    }
    .image_style_3::after {
      width: 5rem;
      height: 5rem;
    }
  }
